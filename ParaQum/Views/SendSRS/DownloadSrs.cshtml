            @foreach (string item in Model.SrsFiles)
            {

                <tr>
                    <td>
                        <div class="alert alert-success" id="srsDiv" role="alert">
                            <a target="_blank" href="@Model.SrsFilesPath[0]@item" onclick="removeLink()" id="link">@item</a>
