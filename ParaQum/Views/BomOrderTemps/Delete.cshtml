}

<h2>Delete</h2>



<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">
                    Delete BOM
                </h2>
                <ol class="breadcrumb">
                    <li>
                        <span class="glyphicon glyphicon-home"></span>  Home
                    </li>
                    <li>
                        <i class="fa fa-fw fa-bar-chart-o"></i> Create Order
                    </li>
                    <li>
                        <span class="glyphicon glyphicon-eye-open"></span> View Order
                    </li>
                    <li class="active">
                        <span class="glyphicon glyphicon-edit"></span> Edit Order
                    </li>
                    <li>
                        <span class="glyphicon glyphicon-remove"></span> Delete
                    </li>
                </ol>
                <h5>Are you sure you want to delete this?</h5>
                <div id="popContent" class="table-responsive">
                    <h5>Are you sure you want to delete this?</h5>
                    <div id="popContent" class="table-responsive">
                        <h4>User</h4>
                        <hr />
                        <dl>

                            <dt>
                                @Html.DisplayNameFor(model => model.itemNo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.itemNo)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.customerRef)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.customerRef)
                            </dd>



                            <dt>
                                @Html.DisplayNameFor(model => model.qty1)
                            </dt>

                            <dd>
