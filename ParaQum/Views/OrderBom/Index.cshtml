@model ParaQum.Models.Bom
@{
    ViewBag.Title = "Ordering";
}

<html>
<head>
    <title>Import excel file</title>
    <script>
        $(document).ready(function () {
            $("#submit").on("click", function (e) {
                alert("Test")
            })
        });

    </script>
    @if (null != TempData["Order"])
    {
        <script type="text/javascript">
        alert("@TempData["Order"]");
        </script>
    }
</head>
<body>
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">
                        Create Order
                    </h2>
                    <ol class="breadcrumb">
                        <li>
                            <span class="glyphicon glyphicon-home"></span>  Home
                        </li>
                        <li class="active">
                            <i class="fa fa-fw fa-bar-chart-o"></i> Create Order
                        </li>
                    </ol>
                    <br />
                    <br />

                    <table>
                       <tr></tr>
                        <tr></tr>
                        <tr>
                            <td style="font-size:20px;">Boms at Pending State</td>

                        </tr>
                       @try
                       {
                           foreach (var b in ViewBag.BomNames)
                           {
                            <tr>
                                <td>@b.ExcelFile</td>
                            </tr>
                           }
                        <tr>
                            <td>At  C:\Users\HARITH\Desktop\harith</td>

                        </tr>
                       }
                       catch (Exception e)
                       {

                       }
                    </table>

                    <br />
                  
                    <div class="form-horizontal">
                        @using (Html.BeginForm("selectFiles", "OrderBom", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            try
                            {
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ExcelFile, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.ListBox("exFileNames", (MultiSelectList)ViewBag.exFileNames, new { @class = "myClass", style = "width: 250px;" })
                                        @Html.ValidationMessageFor(model => model.ExcelFile, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @Html.Raw(ViewBag.Error)
                                @*<div class="form-group">
                                    <div class="col-md-10">
                                        <input type="file" name="files" multiple />
                                    </div>
                                </div>*@
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="submit" value="Select" />
                                    </div>
                                </div>
                            }
                            catch (Exception e)
                            {

                            }

                        }
                    </div>
                    <button class="btn btn-primary"> @Html.ActionLink("Orders", "Index", "Orders")</button>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>



